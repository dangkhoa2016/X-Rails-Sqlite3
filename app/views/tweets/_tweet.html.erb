<%= turbo_frame_tag dom_id(tweet_presenter.tweet) do %>
  <div class="tweet d-flex py-2 px-3 border-bottom">
    <div class="flex-shrink-0">
      <%= image_tag tweet_presenter.avatar, size: "48x48", class: "rounded-circle" %>
    </div>
    <div class="flex-grow-1 ms-3">
      <p class="mb-0">
        <span class="fw-bolder"><%= tweet_presenter.display_name.humanize %></span> <span class="text-muted">
        @<%= tweet_presenter.username %>ãƒ»<%= tweet_presenter.created_at %>
        </span>
      </p>
      <p> <%= tweet_presenter.body %> </p>
      <div class="d-flex justify-content-between align-items-center action-links">
        <div class="align-items-center">
          <%= link_to tweet_path(tweet_presenter.tweet), class: "text-decoration-none text-black reply" do %>
            <svg viewBox="0 0 24 24" aria-hidden="false" class="r-4qtqp9 r-yyyyoo r-1xvli5t r-dnmrzs r-bnwqim r-1plcrui r-lrvibr r-1hdv0qi me-1" width="18"><g><path d="M1.751 10c0-4.42 3.584-8 8.005-8h4.366c4.49 0 8.129 3.64 8.129 8.13 0 2.96-1.607 5.68-4.196 7.11l-8.054 4.46v-3.69h-.067c-4.49.1-8.183-3.51-8.183-8.01zm8.005-6c-3.317 0-6.005 2.69-6.005 6 0 3.37 2.77 6.08 6.138 6.01l.351-.01h1.761v2.3l5.087-2.81c1.951-1.08 3.163-3.13 3.163-5.36 0-3.39-2.744-6.13-6.129-6.13H9.756z"></path></g></svg>
            <span class="reply">Replies</span>
          <% end %>
        </div>
        <div class="align-items-center">
          <%= link_to tweet_presenter.retweet_tweet_url, data: { "turbo_method": tweet_presenter.turbo_retweet_data_method }, class: "text-decoration-none text-muted retweets" do %>
            <%= tweet_presenter.retweet_image.html_safe %>
            <span> <%= tweet_presenter.retweets_count %> </span>
          <% end %>
        </div>
        <div class="align-items-center">
          <%= link_to tweet_presenter.like_tweet_url, data: { "turbo_method": tweet_presenter.turbo_like_data_method }, class: "text-decoration-none text-muted likes" do %>
            <%= tweet_presenter.like_heart_image.html_safe %>
            <span> <%= tweet_presenter.likes_count %> </span>
          <% end %>
        </div>
        <div class="align-items-center">
          <%= link_to "#", class: "text-decoration-none text-muted views" do %>
            <svg viewBox="0 0 24 24" aria-hidden="true" class="r-4qtqp9 r-yyyyoo r-1xvli5t r-dnmrzs r-bnwqim r-1plcrui r-lrvibr r-1hdv0qi views" width="18"><g><path d="M8.75 21V3h2v18h-2zM18 21V8.5h2V21h-2zM4 21l.004-10h2L6 21H4zm9.248 0v-7h2v7h-2z"></path></g></svg>
          <% end %>
        </div>
        <div class="align-items-center">
          <%= link_to tweet_presenter.bookmark_tweet_url, data: { "turbo_method": tweet_presenter.turbo_bookmark_data_method }, class: "text-decoration-none text-muted bookmarks" do %>
            <%= tweet_presenter.bookmark_image.html_safe %>
            <span> <%= tweet_presenter.bookmark_text %> </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
