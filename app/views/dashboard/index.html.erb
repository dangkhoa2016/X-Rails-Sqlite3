<div
  class="col-7 border-start border-end"
  id="dashboard-tweets"
  data-controller="dashboard-tweets tweet-polling"
  data-latest-tweet-id="<%= @tweet_activities_data[:tweet_activities].first&.id%>"
  data-next-page="<%= @tweet_activities_data[:next_page]%>"
  data-last-page="<%= @tweet_activities_data[:last_page]%>"
  >
  <div class="mb-3">
    <%= link_to "Home", dashboard_path, class: "fs-4 text-decoration-none text-black fw-semibold" %>
    <div class="container text-center border-bottom text-muted mt-1 py-3">
      <div class="row">
        <div class="col">
          For you
        </div>
        <div class="col">
          Following
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex py-1 px-3 mb-2 border-bottom">
    <div class="flex-grow-1">
      <%= render "shared/tweet_form", button_label: "Post", form_submit_path: tweets_path %>
    </div>
  </div>
  <div id="tweets">
    <%= render "dashboard/tweets", tweet_activities_data: @tweet_activities_data %>
  </div>
</div>
<div class="col">
  <%= render "shared/hashtag_sidebar" %>
</div>
