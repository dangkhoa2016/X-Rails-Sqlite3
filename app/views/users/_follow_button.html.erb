<%= turbo_frame_tag "follow-unfollow-button" do %>
  <% if user.followers.include?(current_user) %>
    <%= link_to "Unfollow", user_following_path(current_user, current_user.followings.find_by(following_user_id: user)), class: "btn btn-outline-info rounded-pill", data: { "turbo-method": :delete } %>
  <% else %>
    <%= link_to "Follow", user_followings_path(current_user, following_user_id: user.id), class: "btn btn-outline-info rounded-pill", data: { "turbo-method": :post } %>
  <% end %>
<% end %>
